<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HopitalTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorAccent">@color/accent_material_light_1</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/accent_material_light_1</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/accent_material_light_1</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/accent_material_light_1</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:colorBackground">@color/primaryTextColor</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/accent_material_light_1</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>

    </style>

    <style name="Theme.AppTheme.Light.NoActionBar" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/secondaryLightColor</item>
        <item name="android:textColorPrimaryInverse">@color/primaryLightColor</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryDarkColor</item>
        <item name="android:colorBackground">@color/accent_material_light_1</item>
    </style>
</resources>